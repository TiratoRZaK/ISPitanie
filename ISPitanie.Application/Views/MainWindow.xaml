                <TabItem Header="Меню">
                    <Grid Background="#FFE5E5E5" />
                </TabItem>
                <TabItem Header="Отчёты">
                    <Grid Background="#FFE5E5E5" />
                </TabItem>
                <TabItem Header="Договора">
                    <Grid Background="#FFE5E5E5" />
                </TabItem>
                <TabItem Header="Счёт-фактуры">
                    <Grid Background="#FFE5E5E5" />
                </TabItem>
                <TabItem Header="Поддержка">
