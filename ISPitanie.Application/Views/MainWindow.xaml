            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Grid.Row="1" Content="Календарь" Margin="10" />
            <Button Grid.Column="1" Grid.Row="1" Content="Панель информации" Margin="10" />
            <TabControl MinHeight="100" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Margin="10" Height="auto" Width="auto" IsSynchronizedWithCurrentItem="True" SelectedIndex="0">
                <TabItem Header="Продукты">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Button Content="Добавить новый продукт" Padding="3" Margin="5,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="auto" Height="25" Grid.Row="0" Grid.ColumnSpan="2" Click="AddProductButton_Click" />
                        <DataGrid x:Name="productDataGrid" Margin="5,40,5,5" Grid.ColumnSpan="2" ItemsSource="{Binding}" Grid.RowSpan="2" IsSynchronizedWithCurrentItem="False" AutoGenerateColumns="False" IsReadOnly="True" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
                            <DataGrid.Columns>
                                <DataGridTextColumn  Binding="{Binding Name}" Header="Наименование" Width="0.25*" />
                                <DataGridTextColumn  Binding="{Binding TypeName}" Header="Тип продукта" Width="0.25*" />
                                <DataGridTextColumn  Binding="{Binding UnitName}" Header="Ед. изм." Width="0.1*" />
                                <DataGridTextColumn Binding="{Binding Norm}" Header="Норма на человека" Width="0.225*" />
                                <DataGridTextColumn  Binding="{Binding Price}" Header="Цена" Width="0.1*" />
                                <DataGridTextColumn  Binding="{Binding Protein}" Header="Белки" Width="0.1*" />
                                <DataGridTextColumn  Binding="{Binding Fat}" Header="Жиры" Width="0.1*" />
                                <DataGridTextColumn  Binding="{Binding Carbohydrate}" Header="Углеводы" Width="0.1*" />
                                <DataGridTextColumn  Binding="{Binding Vitamine_C}" Header="Витамин C" Width="0.1*" />
                                <DataGridTemplateColumn Header="Функции" Width="170">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Width="80" HorizontalAlignment="Left" Click="EditProduct" CommandParameter="{Binding Id}" Content="Изменить" />
                                                <Button Width="80" HorizontalAlignment="Right" Margin="10,0,0,0" Click="DeleteProductButton_Click" CommandParameter="{Binding Id}" Content="Удалить" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>
